<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="olab.ringring">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.VIBRATE" />

    <application
        android:name=".util.application.RingRingApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true">
        <activity
            android:name=".splash.SplashActivity"
            android:theme="@style/NoActionBarTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".join.JoinActivity"
            android:theme="@style/JoinActivityTheme"
            android:windowSoftInputMode="adjustPan">
            <intent-filter>
                <action android:name="olab.ringring.join.JoinActivity" />
            </intent-filter>
        </activity>
        <activity android:name=".join.signup.partnerauthorization.PartnerConnectingActivity">
            <intent-filter>
                <action android:name="olab.ringring.partnerauthorization.PartnerConnectingActivity" />
            </intent-filter>
        </activity>
        <activity android:name=".join.signup.partnerauthorization.DownloadLinkSendingActivity" />
        <activity android:name=".main.mymenu.dday.DdaySettingActivity" />
        <activity android:name=".main.mymenu.myaccount.MyAccountActivity" />
        <activity android:name=".main.mymenu.missionhistory.MissionHistoryActivity" />
        <activity
            android:name=".main.home.HomeActivity"
            android:theme="@style/AppTheme.NoTitleActionBar">
            <!--<intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>-->
        </activity>
        <activity
            android:name=".main.mymenu.MyMenuActivity"
            android:label="@string/title_activity_my_menu"
            android:theme="@style/AppTheme.NoTitleActionBar" />
        <activity
            android:name=".main.ringdesign.RingDesignActivity"
            android:label="@string/title_activity_ring_design"
            android:theme="@style/AppTheme.NoTitleActionBar"></activity>
    </application>

</manifest>