<resources xmlns:app="http://schemas.android.com/apk/res-auto">

    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorPrimaryDark</item>
    </style>

    <style name="NoActionBarTheme" parent="AppTheme">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.NoTitleActionBar">
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">true</item>
        <item name="drawerArrowStyle">@style/DrawerArrowStyle</item>
    </style>

    <style name="JoinActivityTheme" parent="@style/AppTheme">
        <item name="colorPrimaryDark">@color/colorJoinActivityStatusBar</item>
        <item name="colorPrimary">@color/colorJoinActivityAppbarBackGround</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="DrawerArrowStyle" parent="@style/Widget.AppCompat.DrawerArrowToggle">
        <item name="spinBars">true</item>
        <item name="color">@android:color/white</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="JoinEditText">
        <item name="android:textColorHint">@color/colorInputText</item>
        <item name="android:textSize">17sp</item>
        <item name="android:textColor">@color/colorInputText</item>
        <item name="android:paddingBottom">20dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="JoinEditText.SubmitEditText">
        <item name="android:singleLine">true</item>
        <item name="android:imeOptions">actionDone</item>
    </style>

    <style name="JoinCaptionText">
        <item name="android:paddingStart">3dp</item>
        <item name="android:textSize">12sp</item>
        <item name="android:layout_marginTop">-4dp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/colorAccent</item>

    </style>

    <style name="ShowDdayViewText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="RingRingDialogTheme" parent="Theme.AppCompat.Dialog">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@drawable/shape_dialog_background</item>
    </style>

    <style name="TextDialogMessageStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:layout_marginTop">15dp</item>
        <item name="android:layout_marginBottom">15dp</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:textColor">@color/colorDialogDivider</item>
    </style>


    <style name="RingDetailAttributeView">
        <item name="android:layout_margin">15dp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
    </style>

    <style name="MyAccountEditText">
        <item name="android:imeOptions">actionSend</item>
        <item name="android:inputType">text</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="LoverAuthorizationTitleText">
        <item name="android:text">상대방 인증</item>
        <item name="android:textSize">20sp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/colorPrimaryDark</item>
        <item name="android:paddingBottom">48dp</item>
    </style>

    <style name="LoverAuthorizationSubmitButton">
        <item name="android:layout_width">250dp</item>
        <item name="android:layout_height">51dp</item>
        <item name="android:layout_gravity">center_horizontal</item>
    </style>


</resources>
