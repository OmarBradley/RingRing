<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    tools:context="olab.ringring.util.dialog.select.SelectDialogFragment">

    <TextView
        android:id="@+id/text_select_dialog_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="13dp"
        android:layout_marginStart="15dp"
        android:layout_marginTop="13dp"
        android:text="프로필 설정"
        android:textColor="@color/colorDialogCheck"
        android:textSize="20sp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/colorDialogCheck" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/list_select_dialog_items"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="13dp"
        android:layout_marginStart="15dp"
        android:layout_marginTop="13dp" />

    <TextView
        android:id="@+id/text_select_dialog_cancel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="13dp"
        android:layout_marginTop="13dp"
        android:text="취소"
        android:textColor="@color/colorDialogGray"
        android:textSize="20sp" />

</LinearLayout>
