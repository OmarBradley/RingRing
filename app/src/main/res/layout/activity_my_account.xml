<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="olab.ringring.main.mymenu.myaccount.MyAccountActivity">

    <ImageView
        android:id="@+id/image_my_account_user_profile"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/test_user_profile_image" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="이름" />

            <EditText
                android:id="@+id/edit_my_account_user_name"
                style="@style/MyAccountEditText"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="애인이름" />

            <EditText
                android:id="@+id/edit_my_account_lover_name"
                style="@style/MyAccountEditText"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="반지 호수" />

            <EditText
                android:id="@+id/edit_my_account_ring_size"
                style="@style/MyAccountEditText" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="성별" />

            <EditText
                android:id="@+id/edit_my_account_user_gender"
                style="@style/MyAccountEditText" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="내 전화번호" />

            <EditText
                android:id="@+id/edit_my_account_user_phone_number"
                style="@style/MyAccountEditText" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="내 계정정보" />

            <EditText
                android:id="@+id/edit_my_account_user_info"
                style="@style/MyAccountEditText" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="비밀번호 변경" />

            <EditText
                android:id="@+id/edit_my_account_user_password_change"
                style="@style/MyAccountEditText" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="비밀번호 확인" />

            <EditText
                android:id="@+id/edit_my_account_user_password_confirm"
                style="@style/MyAccountEditText" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/btn_my_account_logout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="로그아웃" />

                <Button
                    android:id="@+id/btn_my_account_secession"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="계정 탈퇴" />
            </LinearLayout>
        </LinearLayout>

    </ScrollView>
</LinearLayout>