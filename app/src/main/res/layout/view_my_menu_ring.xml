<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <com.mikhaellopez.circularprogressbar.CircularProgressBar
        android:id="@+id/progress_bar_my_menu_ring_collecting_count"
        android:layout_width="149dp"
        android:layout_height="149dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        app:cpb_background_progressbar_color="@color/colorProgressBackground"
        app:cpb_background_progressbar_width="7dp"
        app:cpb_progress="100"
        app:cpb_progressbar_color="@color/colorPrimaryDark"
        app:cpb_progressbar_width="7dp" />

    <ImageView
        android:id="@+id/image_my_menu_ring_shape"
        android:layout_width="92dp"
        android:layout_height="92dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_gravity="center"
        android:src="@drawable/circle_image" />

    <ImageView
        android:id="@+id/image_my_menu_ring_jewelry"
        android:layout_width="42dp"
        android:layout_height="42dp"
        android:layout_alignTop="@+id/image_my_menu_ring_shape"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center_horizontal|top"
        android:layout_marginTop="32dp"
        android:src="@drawable/ruby_choice_image" />

    <TextView
        android:id="@+id/image_my_menu_ring_collecting_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/image_my_menu_ring_shape"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="22dp"
        android:textColor="@color/colorTextColor"
        android:text="2/18"
        android:textSize="13sp" />

</RelativeLayout>