<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <TextView
        style="@style/ShowDdayViewText"
        android:layout_gravity="center"
        android:text="사귄지" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginBottom="3dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/text_couple_d_day"
            style="@style/ShowDdayViewText"
            android:text="48"
            android:textStyle="bold" />

        <TextView
            style="@style/ShowDdayViewText"
            android:text="일째" />
    </LinearLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/image_home_ring_shape"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_gravity="center"
            android:src="@drawable/chatting_octagon_image" />

        <ImageView
            android:id="@+id/image_home_ring_jewelry"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_alignParentTop="true"
            android:layout_gravity="center"
            android:layout_marginTop="-20dp"
            android:src="@drawable/chatting_crystal_image" />
    </RelativeLayout>


</LinearLayout>