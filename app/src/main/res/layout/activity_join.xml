<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    tools:context=".join.JoinActivity">

    <LinearLayout
        android:id="@+id/upper_content_join_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorJoinActivityUpperLayoutBackGround"
        android:orientation="vertical">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="@dimen/join_logo_margin_top"
            android:layout_marginTop="@dimen/join_logo_margin_bottom"
            android:background="@android:mipmap/sym_def_app_icon" />

    </LinearLayout>

    <android.support.design.widget.TabLayout
        android:id="@+id/tabLayout"
        style="@style/JoinTabLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fillViewport="true"
        app:tabGravity="fill"
        app:tabMode="fixed" />

    <android.support.v4.view.ViewPager
        android:id="@+id/pager"
        android:paddingStart="@dimen/join_page_margin_start"
        android:paddingEnd="@dimen/join_page_margin_end"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

</LinearLayout>
