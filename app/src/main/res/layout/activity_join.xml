<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    tools:context=".join.JoinActivity">

    <LinearLayout
        android:id="@+id/upper_content_join_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorJoinActivityAppbarBackGround"
        android:orientation="vertical">

        <ImageView
            android:layout_width="96dp"
            android:layout_height="90dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="21dp"
            android:layout_marginTop="36dp"
            android:background="@drawable/join_title_image" />

    </LinearLayout>

    <android.support.design.widget.TabLayout
        android:id="@+id/tabLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/ripple_join_tab_layout"
        android:fillViewport="true"
        app:tabGravity="fill"
        style="@style/JoinActivityTabTheme"
        app:tabMode="fixed" />

    <View
        android:layout_width="match_parent"
        android:layout_marginTop="-2dp"
        android:layout_height="1dp"
        android:background="@color/colorWhiteBackground" />

    <android.support.v4.view.ViewPager
        android:id="@+id/pager_join_fragment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorWhiteBackground"
        android:paddingEnd="30dp"
        android:paddingStart="30dp" />

</LinearLayout>
