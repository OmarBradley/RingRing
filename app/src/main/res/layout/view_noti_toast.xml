<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="272dp"
    android:layout_height="69dp"
    android:background="@color/colorNotiToastBackground"
    android:orientation="horizontal"
    android:paddingStart="15dp"
    android:paddingEnd="15dp"
    android:paddingTop="8dp">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/image_noti_toast_lover_profile"
        android:layout_width="46dp"
        android:layout_height="46dp"
        android:background="@drawable/default_profile_image" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingStart="8dp">

        <TextView
            android:id="@+id/text_noti_toast_lover_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="김미영"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/text_noti_toast_message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="미영이 누나 안녕하세요? 요즘 너무 힘드시죠?.......ㅜㅜㅜㅜㅜㅜㅜㅜㅜㅜㅜ"
            android:textColor="@color/colorWhiteTextColor"
            android:textSize="10sp" />
    </LinearLayout>


</LinearLayout>